#PECL
PHP_PEAR=http://pear.php.net/go-pear.phar

RED=`tput setaf 1`
GREEN=`tput setaf 2`
NC=`tput sgr0`

ERROR="${RED}error${NC}"
DONE="${GREEN}done${NC}"

verify_command(){
	if [ $1 -eq 0 ]; then
			echo $DONE
		else
			echo $ERROR
			echo $2
			exit 1;
		fi

}

install_program(){
	echo "Checking if $1 present .."
	if which $1>/dev/null; then
    		echo "$1 exists"
	else
 		read -e -p "$1 doesn't exist. Do you want to install?" -i "y" ans
 		if [ "$ans" == "y" ];then
 			yum -y install $2
 			verify_command #? "Error installing $1"
 		else
 			echo "Exiting .."
 			exit 1;
 		fi
	fi
}

compare_versions(){
	if [ "$1" != "$2" ]; then
		versions=$(echo -e "$1\n$2" | sort -V)
		versions=($versions)
		if [ "${versions[1]}" == "$2" ]; then
			echo "new"
		else
			echo "old";
		fi
	else
		echo "new";
	fi
}